<view>
  <wxml-to-canvas class="widget" width="400" height="{{canvasHeight}}"></wxml-to-canvas>
  <view class="test"></view>
  <background isHighlight="true"></background>
  <view class="signResult">
    <view class="signTable">
      <view class="signTr signHeader">
        <view class="signTh">序号</view>
        <view class="signTh">每周风险防控清单</view>
        <view class="signTh">评价</view>
        <view class="signTh">处理措施</view>
      </view>
      <block wx:for="{{reportData}}" wx:key="index">
        <view class="signTr">
          <view class="signTd">{{index + 1}}</view>
          <view class="signTd textLeft">{{item.label}}</view>
          <view class="signTd signCommend"> {{ item.checkResult === 'success' ? '合格' : '不合格'}} </view>
          <view class="signTd textLeft">{{item.checkExceptionReason}}</view>
        </view>
      </block>
    </view>

    <view class="signBottom">
      <view wx:if="{{signUrl}}" class="signSign">
        <text>报告人：</text>
        <image src="{{signUrl}}"></image>
      </view>
      <t-button wx:else type="primary" bindtap="handleFullScreen1">点击签名</t-button>
    </view>
  </view>

  <view class="sign-export"> <t-button block bindtap="exportReport">导出报告</t-button></view>

