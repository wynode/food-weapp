.create-report {
  position: relative;
  padding: 30rpx;
}

.cr-top-box {
  position: fixed;
  top: 0;
  left: 0;
  background-color: #fff;
  z-index: 1000;
  width: 100vw;
  padding: 30rpx;
  box-sizing: border-box;
}

.cr-top {
  display: flex;
  justify-content: space-between;
}

.cr-top-left {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 45rpx;
}

.cr-top-left text {
  color: #0B82FF;
  margin-left: 6rpx;
}

.cr-top-right {
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
  line-height: 45rpx;
}

.cr-top-right text {
  color: #0B82FF;
}

.cr-progress {
  margin-top: 20rpx;
}

.cr-list {
  margin-bottom: 240rpx;
}

.cr-list .t-checkbox__border {
  display: none;
}

.cr-list .t-checkbox {
  background: #F2F4F7;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.cr-list .t-grid {
  background: #F2F4F7;
}

.cr-list .t-grid-item__content {
  border-radius: 8rpx;
  background: transparent;
}

