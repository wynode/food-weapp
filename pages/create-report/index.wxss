.cns-bbtn {
  position: fixed;
  bottom: 20rpx;
  width: 100vw;
  padding: 30rpx;
  box-sizing: border-box;
  left: 0;
}

.container2 {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  padding: 15px;
  display: flex;
  justify-content: center;
  background: #eee;
  z-index: 10000;
}

.signature2 {
  z-index: 10000;
  background-color: #fff;
}

.hidden-sign {
  display: none;
}

.actions2Wrap {
  width: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.actions2 {
  margin-right: 10px;
  white-space: nowrap;
  transform: rotate(90deg);
}

.sign-title {
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
  padding-top: 140rpx;
  padding-bottom: 100rpx;
}

.actions2 button {
  margin-left: 5px;
  display: inline-block;
  height: 30px;
  line-height: 30px;
  padding: 0 5px;
}
