.all-center {
  padding: 30rpx;
  position: relative;
  height: calc(100vh - 200rpx);
  overflow-y: auto;
}

.rl-top {
  display: flex;
  justify-content: space-between;
}

.rl-top-left {
  display: flex;
  align-items: center;
}

.rl-top-logo {
  width: 54rpx;
  height: 54rpx;
  background: #0B82FF;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.rl-top-icon {
  width: 30rpx;
  height: 30rpx;
}

.rl-top-title {
  font-size: 32rpx;
  font-weight: 400;
  color: #333333;
  line-height: 45rpx;
  white-space: nowrap;
  /* 让文本不换行 */
  overflow: hidden;
  /* 隐藏溢出的文本 */
  text-overflow: ellipsis;
  max-width: 500rpx;
  /* 使用省略号来表示文本的溢出部分 */
}

.rl-top-right {}

.rl-top-bell {
  width: 43rpx;
  height: 54rpx;
}

.rl-record {
  margin-top: 40rpx;
}

.rlr-top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.rlr-top-left {
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
  line-height: 45rpx;
}

.rlr-top-right {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 45rpx;
  display: flex;
  align-items: center;
}

.rlr-top-img {
  width: 20rpx;
  height: 32rpx;
  margin-left: 20rpx;
}

.rlr-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 35rpx 34rpx 45rpx 40rpx;
}

.rlr-record {
  display: flex;
  flex-direction: column;
}

.rlr-record-item {
  width: 320rpx;
  height: 80rpx;
  background: rgba(11, 130, 255, 0.1);
  border-radius: 8rpx;
  color: #333;
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 6rpx 30rpx;
  box-sizing: border-box;
}

.rlr-record-item view:nth-child(2) {
  font-size: 30rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
  line-height: 42rpx;
}

.rl-report {
  margin-top: 40rpx;
}

.rlr-box {}

.rlr-box-item {
  width: 690rpx;
  height: 160rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

.rlb-left image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.rlb-content {
  flex-grow: 1;
  display: flex;
  justify-content: space-between;
  height: 110rpx;
}

.rlb-center {
  display: flex;
  flex-direction: column;
  justify-content: space-between;

}

.rlb-center-title {
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 48rpx;
}

.rlb-center-bottom {
  display: flex;
  color: #333;
}

.rlb-center-fit text {
  color: #0B82FF;
  margin-left: 10rpx;
  margin-right: 40rpx;
}

.rlb-center-unfit text {
  color: #FF3E3E;
  margin-left: 10rpx;
}

.rlb-right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-end;
}

.rlb-right-title {
  color: #333;
  font-size: 28rpx;
}

.rlb-right-title text {
  font-size: 34rpx;
  font-weight: bold;
}

.rlb-right-export {
  width: 36rpx;
  height: 30rpx;
  margin-bottom: 10rpx;
}

.t-tab-bar-item__icon {
  color: #0B82FF;
}
