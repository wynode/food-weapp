.choice-shop-type {
  display: block;
  padding: 0 24rpx;
}

.cst-top {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 30px;
}

.cst-img {
  width: 630rpx;
  height: 438rpx;
}

.cst-title {
  font-size: 40rpx;
  font-family: SimSong-Bold, SimSong;
  font-weight: bold;
  color: #333333;
  line-height: 80rpx;
  letter-spacing: 1px;
  margin-top: 20rpx;
}

.cst-box {
  display: flex;
}

.cst-type {
  width: 150rpx;
  height: 150rpx;
  background: #0B82FF;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 21rpx;
}

.cst-type-img {
  width: 81rpx;
  height: 74rpx;
}

.cst-type-des {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.cst-type-title {
  font-size: 42rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 59rpx;
}

.cst-type-info {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 0.6);
  line-height: 45rpx;
}

.card {
  position: relative;
  margin: 32rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-sizing: border-box;
  background: #F2F4F7;
  border: 4rpx solid #fff;
}

.card--active {
  border-color: #0B82FF;
}

.card--active::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 0;
  border: 14px solid #0B82FF;
  border-bottom-color: transparent;
  border-right-color: transparent;
}

.card__icon {
  color: #fff;
  position: absolute;
  left: 1.5px;
  top: 1.5px;
  z-index: 1;
}

/* 横向布局 */
.horizontal-box {
  width: calc(100% - 64rpx);
  display: flex;
  align-items: center;
  margin: 32rpx;
}

.horizontal-box .card {
  flex: 1;
  margin: 0;
}

.horizontal-box .card+.card {
  margin-left: 24rpx;
}