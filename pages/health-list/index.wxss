.cert {
  position: relative;
  padding: 30rpx;
}

.cert-item {
  margin-top: 40rpx;
}

.cert .cert-item:first-child {
  margin-top: 10rpx;
}

.cert-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 38rpx;
  font-weight: bold;
}

.cert-content {
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
}

.cert-content .t-button {
  margin: 44rpx 20rpx;
}

.cert-img {
  width: 100%;
  max-height: 200rpx;
}

.cert-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.cert-btn {
  margin: 0;
}

.cert-list {
  margin-top: 24rpx;
}