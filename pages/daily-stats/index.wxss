.daily-stats {
  position: relative;
  padding: 30rpx;
}

.ds-top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.ds-top-left {
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
  line-height: 45rpx;
}

.ds-top-right {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 45rpx;
  display: flex;
  align-items: center;
}

.ds-top-img {
  width: 20rpx;
  height: 32rpx;
  margin-left: 20rpx;
}

.ds-stats {
  display: flex;
}

.ds-stats-btn {
  width: 162rpx;
  height: 80rpx;
  background: rgba(11, 130, 255, 0.15);
  border-radius: 8rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #0B82FF;
  line-height: 42rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  padding: 0 16rpx;
}

.ds-btn-red {
  color: #FC5B5B;
  background: rgba(252, 91, 91, 0.15);
}

.ds-list {}

.ds-item {
  background: #FFFFFF;
  border-radius: 16rpx;
  margin-top: 30rpx;
}

.ds-item-top {
  width: 690rpx;
  height: 73rpx;
  background: #FC5B5B;
  display: flex;
  justify-content: space-between;
  border-radius: 16rpx 16rpx 0rpx 0rpx;
  padding: 13rpx 20rpx;
  box-sizing: border-box;
}

.ds-item-top-left {
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 48rpx;
}

.ds-item-top-right {
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 48rpx;
}

.ds-item-content {
  padding: 20rpx;
}

.ds-item-content+.ds-item-content {
  border-top: 2rpx solid #DAE2E9;
}

.ds-item-label {
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 0.8);
  line-height: 42rpx;
}

.ds-item-reason {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FC5B5B;
  line-height: 45rpx;
  border-top: 2rpx dashed #DAE2E9;
  border-bottom: 2rpx dashed #DAE2E9;
  padding: 20rpx 0;
  margin: 20rpx 0;
}

.ds-item-photo {}

.ds-item-photo-title {
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 42rpx;
  margin-bottom: 20rpx;
}

.ds-item-photo-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
}